<head>
    <link rel="stylesheet" href="/css/historycard.css">
    <title>Driver Requests</title>

</head>

<body>
    <div class="page-content page-container " id="page-content" style="width: 100%;">
        <div class="padding" style="width: 100%;">
            <div class="row container d-flex justify-content-center" style="width: 100%; height: 100%;">

                <% if (errors.length> 0) { %>
                    <div class="row mx-0 pb-0 alert alert-danger" ,style="margin-left:30%">
                        <ul>
                            <% for (e of errors) { %>
                                <li>
                                    <%= e %>
                                </li>
                                <% } %>
                        </ul>
                    </div>
                    <% }else{%>
                        <% if (allRequests.length==0) { %>

                            <div>
                                <h5 style="padding-top: 30%; margin-left: 50%;">No recent requests</h5>
                            </div>
                            <% } else { %>
                                <div class="scroll">
                                    <% allRequests.forEach(nearbyReq=> { %>

                                        <div class="card user-card-full">
                                            <div class="row m-l-0 m-r-0">
                                                <div class="col-sm-4 bg-c-lite-green user-profile">
                                                    <div class="card-block text-center text-white">
                                                        <div class="m-b-25">
                                                            <img src="/images/<%= nearbyReq.IMAGE %>"
                                                                class="img-radius" alt="User-Profile-Image">
                                                        </div>
                                                        <h6 class="f-w-600">
                                                            <%= nearbyReq.USERNAME %>
                                                        </h6>
                                                        <i
                                                            class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                                    </div>
                                                </div>
                                                <div class="col-sm-8">
                                                    <div class="card-block">
                                                        <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Request Information
                                                        </h6>
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                <p class="m-b-10 f-w-600">Pick up</p>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <h6 class="text-muted f-w-400">
                                                                    <%= nearbyReq.PICK_UP %>
                                                                </h6>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                <p class="m-b-10 f-w-600">drop off</p>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <h6 class="text-muted f-w-400">
                                                                    <%= nearbyReq.DROP_OFF %>
                                                                </h6>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                <p class="m-b-10 f-w-600">Pick Up Distance</p>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <h6 class="text-muted f-w-400">
                                                                    <%= nearbyReq.DISTANCE %>
                                                                </h6>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                <p class="m-b-10 f-w-600">Duration to Pick up</p>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <h6 class="text-muted f-w-400">
                                                                    <%= nearbyReq.DURATION %>
                                                                </h6>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                                <a href="accept/<%=nearbyReq.ID %>"><button  style="width: 104%; margin-left: -20px; background-color: #2ba298;color: #f5f6f9;border-color: #dddfe4;">
                                                    Accept</button></a>
                                            </div>
                                        </div>
                                        <% }); %>
                                </div>
                                <% } %>
                                    <% } %>
            </div>
        </div>
    </div>


</body>
