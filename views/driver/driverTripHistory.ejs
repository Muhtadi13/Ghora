<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DRIVER Trip History</title>
    <style>
        /* Add your CSS styling here */
        body {
            font-family: Arial, sans-serif;
        }
        .request-container {
            border: 1px solid #ddd;
            padding: 10px;
            margin: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .request-details {
            flex: 1;
        }
        .accept-button {
            background-color: #4caf50;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
        }
        p{
            margin-left: 30%;
        }
        </style>
</head>
<body>
    <h1 style="margin-left: 50%;">DRIVER Trip History</h1>

    <% if (history.length == 0) { %>
        <p style="margin-left: 50%;">No recent history available.</p>
    <% } else { %>
        <% history.forEach(element => { %>
            <div class="request-container",style="margin-left:60%">
                <div class="request-details",style="margin:left:60%">
                    <p><strong>TRIP ID:</strong> <%= element.TR_ID %></p>
                    <p><strong>VEHICLE:</strong> <%= element.PLATE_NO %></p>
                    <p><strong>Pick Up:</strong> <%= element.PICK_UP %> </p>
                    <p><strong>Drop Off:</strong> <%= element.DROP_OFF %> </p>
                    <p><strong>START TIME:</strong> <%= element.START_TIME %></p>
                    <p><strong>FINISH TIME:</strong> <%= element.FINISH_TIME %> </p>
                    <p><strong>FARE:</strong> <%= element.FARE.toFixed(2) %></p>
                    <% if(element.PAYMENT.length>0) { %>
                        <p><strong>TRANSACTION_NO:</strong> <%= element.PAYMENT[0].TRANSACTION_NO %></p>
                    <% } %>
                    <% if(element.REVIEW.length>0) { %>
                        <p><strong>Review:</strong> <%= element.REVIEW[0].RATING %></p>
                    <% } %>
                         
                    
                </div>
            </div>
        <% }); %>
    <% } %>
</body>
</html>
