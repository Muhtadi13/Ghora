<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/wallet.css">
</head>

<body>



    <% if (errors.length> 0) { %>
        <div class="container" style="width: 100%; height: 100%;">
            <div class="row mx-0 pb-0" style="width: 60%;">
                <ul>
                    <% for (e of errors) { %>
                        <li style="width: 100%; margin-top: 50%; margin-left: 40%;">
                            <h3> <b>
                                    <%= e %>
                                </b></h3>
                        </li>
                        <% } %>
                </ul>
            </div>
        </div>
        <% }else{%>
            <div class="card mt-2">
                <div class="card-title mx-auto">
                    Wallet
                </div>
                <div class="nav">
                    <ul class="mx-auto">
                        <li class="active"><a href="#">info</a></li>
                    </ul>
                </div>
                <form action="/driver/wallet" method="post">
                    <span id="card-header">Saved Account</span>
                    <div class="row row-1">
                        <div class="col-2"><img class="img-fluid"
                                src="https://img.icons8.com/color/48/000000/mastercard-logo.png" /></div>
                        <div class="col-7">
                            <%= wallet[0].ACCOUNT_NO %>
                        </div>
                        <div class="col-3 d-flex justify-content-center">
                            ACC NO
                        </div>
                    </div>
                    <div class="row row-1">
                        <div class="col-2"><img class="img-fluid"
                                src="https://img.icons8.com/color/48/000000/visa.png" /></div>
                        <div class="col-7">
                            <%= wallet[0].ID %>
                        </div>
                        <div class="col-3 d-flex justify-content-center">
                            Wallet ID
                        </div>
                    </div>
                    <div class="row row-1">
                        <div class="col-2"><img class="img-fluid"
                                src="https://img.icons8.com/color/48/000000/visa.png" /></div>
                        <div class="col-7">
                            <%= wallet[0].BALANCE %>
                        </div>
                        <div class="col-3 d-flex justify-content-center">
                            Balance
                        </div>
                    </div>

                    <span id="card-header">Add Balance</span>
                    <div class="row-1">
                        <div class="row row-2">
                            <span id="card-inner">Enter Password</span>
                        </div>
                        <div class="row row-2">
                            <input type="password" name="password" required
                                value="<%= (typeof form != 'undefined') ? form.password : '' %>">
                        </div>
                    </div>

                    <div class="row-1">
                        <div class="row row-2">
                            <span id="card-inner">Enter Amount</span>
                        </div>
                        <div class="row row-2">
                            <input type="number" name="amount" required
                                value="<%= (typeof form != 'undefined') ? form.amount : '' %>">
                        </div>

                    </div>
                    <button class="btn d-flex mx-auto"><b>Add Balance</b></button>
                </form>
            </div>
            <!-- ended here -->
            <%}%>

</body>