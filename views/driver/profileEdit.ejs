<div class=" row p-5 ms-5 me-5 g-0">
    <div class="shadow mt-2 mb-2 col-7 p-3 rounded-2 align-middle">
        <!--    start-->

        <form action="/driver/edit" method="POST" class="card-body">
            <!-- handle -->
            <div class="form-floating mb-3">

                <input type="text" class="form-control" name="name" required
                       value="<%= (typeof form != 'undefined') ? form.name : '' %>">
                <label for="handle">Name</label>

            </div>
            <!-- email -->
            <!-- <div class="form-floating mb-3">

                <input type="email" class="form-control" name="email" required
                       value="<%= (typeof form != 'undefined') ? form.email : '' %>">
                <label for="email">Email</label>

            </div> -->
            <!-- phone no -->
            <div class="form-floating mb-3">
                <input type="tel" class="form-control" name="phone" required
                       value="<%= (typeof form != 'undefined') ? form.phone : '' %>">
                <label for="phone">Phone Number</label>
            </div>
            <!-- password -->
            <div class="form-floating mb-3">
                <input type="password" class="form-control" name="password" required
                       value="<%= (typeof form != 'undefined') ? form.password : '' %>">
                <label for="password">Password</label>

            </div>
            <!-- confirm password -->
            <div class="form-floating mb-3">
                <input type="password" class="form-control" name="password2" required
                       value="<%= (typeof form != 'undefined') ? form.password2 : '' %>">
                <label for="password2">Confirm Password</label>
            </div>

            <!-- Date of Birth -->
            <!--        <div class="form-group row m-2">-->
            <!--            <label for="birthdate" class="col-4 col-form-label">Date of Birth</label>-->
            <!--            <div class="pl-3">-->
            <!--                <input type="date" class="form-control" name="birthdate" required-->
            <!--                value="<%= (typeof form != 'undefined') ? form.birthdate : '' %>" >-->
            <!--            </div>-->
            <!--        </div>-->
            <!-- error list -->
            <% if (errors.length > 0) { %>
                <div class="row m-2 mx-0 pb-0 alert alert-danger">
                    <ul>
                        <% for (e of errors) { %>
                            <li> <%= e %> </li>
                        <% } %>
                    </ul>
                </div>
            <% } %>
            <!-- submit -->
            <div class="d-grid gap-2 mt-3">
                <button type="submit" class="btn btn-lg btn-primary" style="background-color: #33c24d;border: 0">
                    Submit
                </button>
            </div>

        </form>

        </div>
    </div>
</div>
