<head>
    <link rel="stylesheet" href="/css/historycard.css">
</head>
<body>
    <div class="page-content page-container " id="page-content" style="width: 100%;">
        <div class="padding" style="width: 100%;">
            <div class="row container d-flex justify-content-center" style="width: 100%; height: 100%;">
                <!-- <div class="col-xl-6" style="width: 100%;"> -->
                <% if (history.length==0) { %>
                    <div>
                        <h5 style="padding-top: 30%; margin-left: 50%;">No recent history available.</h5>
                    </div>
                    <% } else { %>
                        <div class="scroll">
                            <% history.forEach(element=> { %>
                                <div class="card user-card-full">
                                    <div class="row m-l-0 m-r-0">
                                        <div class="col-sm-4 bg-c-lite-green user-profile">
                                            <div class="card-block text-center text-white">
                                                <div class="m-b-25">
                                                    <img src="/images/<%= element.DVIMAGE %>"
                                                        class="img-radius" alt="Driver-Profile-Image" style="height: 225px ;width:225px;">
                                                </div>
                                                <h6 class="f-w-600">
                                                    <%= element.PLATE_NO %>
                                                </h6>
                                                <i
                                                    class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                            </div>
                                        </div>
                                        <div class="col-sm-8">
                                            <div class="card-block">
                                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600">Trip ID</p>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <h6 class="text-muted f-w-400">
                                                            <%= element.TR_ID %>
                                                        </h6>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600">Pick up</p>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <h6 class="text-muted f-w-400">
                                                            <%= element.PICK_UP %>
                                                        </h6>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600">drop off</p>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <h6 class="text-muted f-w-400">
                                                            <%= element.DROP_OFF %>
                                                        </h6>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600">Start Time</p>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <h6 class="text-muted f-w-400">
                                                            <%= element.START_TIME %>
                                                        </h6>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600">End Time</p>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <h6 class="text-muted f-w-400">
                                                            <%= element.FINISH_TIME %>
                                                        </h6>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600">Fare</p>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <h6 class="text-muted f-w-400">
                                                            <%= element.FARE.toFixed(2) %>
                                                        </h6>
                                                    </div>
                                                </div>
                                                <% if(element.PAYMENT.length>0) { %>
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <p class="m-b-10 f-w-600">Transaction ID</p>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <h6 class="text-muted f-w-400">
                                                                <%= element.PAYMENT[0].TRANSACTION_NO %>
                                                            </h6>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                                    <% if(element.REVIEW.length>0) { %>
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                <p class="m-b-10 f-w-600">Rating</p>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <h6 class="text-muted f-w-400">
                                                                    <%= element.REVIEW[0].RATING %>
                                                                </h6>
                                                            </div>
                                                        </div>
                                                    <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
            </div>
        </div>
    </div>
</body>
